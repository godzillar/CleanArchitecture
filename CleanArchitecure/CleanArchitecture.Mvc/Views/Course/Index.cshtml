@model CleanArchitecture.Application.ViewModels.CourseViewModel

<div class="container body-content">
    <div class="row course-content">
        @foreach(var cource in Model.Courses)
        {
            <div class="course-image-container">
                <div class="course-image" style="background-image:url(@cource.ImageUrl)"></div>
            </div>

            <span>@cource.Name</span>
        }
    </div>
</div>
